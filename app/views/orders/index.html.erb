<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Table</th>
      <th>Client</th>
      <th>Foods</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.table.number %></td>
        <td><%= order.client.name %></td>
        <td>
          <% order.foods.each do |food| %>
            <%= food.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
